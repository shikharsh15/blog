<div class="container text-center">
    <form action="/submit" method="POST">
        <div class="form-floating mb-3">
            <input type="text" name="username" class="form-control" id="floatingInput" placeholder="name@example.com">
            <label for="floatingInput">Username</label>
          </div>
          <div class="form-floating mb-3 ">
            <input type="text" name="topic" class="form-control" id="floatingPassword" placeholder="Password">
            <label for="floatingPassword">Title</label>
          </div>
        <div class="mt-3 ">
            <label style="font-size:40px;" for="exampleFormControlTextarea1"  class="form-label font-weight-bold" style="color:navy">Write your Blog.</label>
            <textarea class="form-control" name="text" id="exampleFormControlTextarea1" rows="10"></textarea>
          </div>
          <input class="mt-3" type="submit" value="Publish" style=" background-color: rgb(80, 80, 80);color: #ffffff;padding: 10px 20px;border: none;border-radius: 5px;cursor: pointer;font-size: 16px;">
      </form>
</div>
